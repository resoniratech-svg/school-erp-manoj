# ======================
# APP ENVIRONMENT
# ======================
NODE_ENV=production
APP_ENV=production
PORT=3001

# ======================
# BASE URLS
# ======================
API_BASE_URL=http://localhost:3001
WEB_BASE_URL=http://localhost:3000

# ======================
# DATABASE (Prisma)
# ======================
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DATABASE

# ======================
# AUTH / SECURITY
# ======================
JWT_ACCESS_SECRET=replace_with_secure_random_string
JWT_REFRESH_SECRET=replace_with_secure_random_string
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ======================
# REDIS
# ======================
REDIS_URL=redis://localhost:6379

# ======================
# RAZORPAY (PRODUCTION)
# ======================
RAZORPAY_KEY_ID=rzp_live_xxxxxxxxxx
RAZORPAY_KEY_SECRET=replace_with_real_secret
RAZORPAY_WEBHOOK_SECRET=replace_with_webhook_secret

# ======================
# FILE STORAGE
# ======================
FILES_STORAGE_PROVIDER=local
FILES_MAX_UPLOAD_MB=10

# ======================
# NOTIFICATIONS
# ======================
EMAIL_PROVIDER=smtp
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=replace_password

SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=replace_token

# ======================
# OBSERVABILITY
# ======================
LOG_LEVEL=info
